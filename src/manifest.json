{
	"manifest_version": 2,

	"author": "Christopher Naron ",
	"name": "Llamalerts",
	"description": "Checks the Deviantart Badges page and lets you know when you have trade offers.",
	"version": "1.0.1",

	"browser_action": {
		
		"default_popup": "popup.html",
		"default_icon": "Logo.png"
	},
	"icons": { 
		"16": "Logo.png",
        "32": "active_logo.png",
        "64": "64_logo.png"
    },
	"permissions": [
		"tabs",
		"activeTab",
		"*://*/*"
	],
	"background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
        "matches": ["*://*/*"],
        "js":      ["scripts.js"]
    }]
}